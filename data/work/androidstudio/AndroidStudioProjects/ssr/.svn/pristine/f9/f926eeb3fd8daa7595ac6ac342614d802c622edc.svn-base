<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:id="@+id/activity_add_account_manager"
    tools:context="ui.activity.TransferAccountActivity">
    <TableLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:gravity="center"
            android:text="转账"
            />
        <TableRow
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/billingTime"
                android:textSize="@dimen/activity_add_account_manager"
                />

            <EditText
                android:focusable="false"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_editor"
                android:layout_weight="1"
                android:clickable="true"
                android:id="@+id/billingTime"
                >
            </EditText>
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="@null"
            />
        <TableRow
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/type"
                android:textSize="@dimen/activity_add_account_manager"
                android:id="@+id/textView2" />

            <Spinner
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_editor"
                android:layout_weight="1"
                android:id="@+id/typeSpinner"
                >
            </Spinner>
        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="@null"
            />
        <TableRow
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/classify"
                android:textSize="@dimen/activity_add_account_manager"
                />
            <Spinner
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_editor"
                android:id="@+id/classifySpinner"
                android:layout_weight="1"
                >

            </Spinner>
        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@null"
            />
        <TableRow
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/reason"
                android:textSize="@dimen/activity_add_account_manager"
                android:id="@+id/textView" />

            <Spinner
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_editor"
                android:id="@+id/reasonSpinner"
                android:layout_weight="1"
                >
            </Spinner>
        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@null"
            />
        <TableRow
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="支付方式"
                android:textSize="@dimen/activity_add_account_manager"
                />

            <Spinner
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_editor"
                android:id="@+id/payMethodSpinner"
                android:layout_weight="1"
                >
            </Spinner>
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@null"
            />
        <TableRow
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/price"
                android:layout_gravity="left"
                android:textSize="@dimen/activity_add_account_manager"
                />

            <EditText
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/priceId"
                android:layout_weight="1"
                android:lines="1"
                android:inputType="numberDecimal"
                android:background="@drawable/shape_editor"
                >
            </EditText>
        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="@null"
            />
        <TableRow
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            >
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/guest"
                android:textSize="@dimen/activity_add_account_manager"
                android:gravity="left"
                />
            <Spinner
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/customerId"
                android:layout_weight="1"

                android:background="@drawable/shape_editor"
                >
            </Spinner>
        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@null"
            />
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/remark"
                android:textSize="@dimen/activity_add_account_manager"
                />
        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@null"
            />

        <EditText
            android:enabled="true"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/remarkId"
            android:gravity="top"
            android:layout_weight="1"
            android:inputType="textMultiLine"
            android:minLines="8"
            android:maxLines="10"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_editor"
            android:scrollbars="vertical"
            android:maxLength="100"
            >
        </EditText>
    </TableLayout>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:id="@+id/buttonPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/main"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加"
            android:background="#056daa"
            android:id="@+id/add"
            android:textSize="18sp"
            android:textColor="#ffffff"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重置"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/add"
            android:id="@+id/reset"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:background="#7c7777"
            />

    </RelativeLayout>
</RelativeLayout>
