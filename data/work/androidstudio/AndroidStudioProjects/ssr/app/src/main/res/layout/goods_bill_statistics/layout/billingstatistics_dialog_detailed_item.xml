<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="3dp"
        android:background="@drawable/linearlayout_shape_corner"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="详细信息"
        android:textSize="18sp"
        android:textColor="#0e2d5f"
        android:gravity="center"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#A7A5A5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/linearlayout_shape_corner_center"
            >
            <TextView
                android:id="@+id/text_id"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_weight="1.5"
                android:text="序号" />

            <View
                android:layout_width="1.5dip"
                android:layout_height="fill_parent"
                android:background="#B4B3B3"/>

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_weight="2"
                android:gravity="center"
                android:id="@+id/yewuleibie"
                android:text="业务类别" />
            <View
                android:layout_width="1.5dip"
                android:layout_height="fill_parent"
                android:background="#B4B3B3"/>
            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_weight="2"
                android:id="@+id/yewuleixing"
                android:gravity="center"
                android:text="业务类型" />

            <View
                android:layout_width="1.5dip"
                android:layout_height="fill_parent"
                android:background="#B4B3B3"/>

            <TextView
                android:id="@+id/zhifufangshi"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:paddingBottom="10dip"
                android:textColor="#000000"
                android:paddingTop="10dip"
                android:textSize="15sp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="支付方式" />
            <View
                android:layout_width="1.5dip"
                android:layout_height="fill_parent"
                android:background="#B4B3B3"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:text="@string/date"
                android:textColor="#000000"
                android:textSize="15sp" />

            <View
                android:layout_width="1.5dip"
                android:layout_height="fill_parent"
                android:background="#B4B3B3"/>

            <TextView
                android:id="@+id/price"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="@string/prices" />
            <View
                android:layout_width="1.5dip"
                android:layout_height="fill_parent"
                android:background="#B4B3B3"/>

            <TextView
                android:id="@+id/price1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_weight="3"
                android:gravity="center"
                android:text="@string/remark_information" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#A7A5A5"/>
    <ListView
        android:layout_weight="1"
        android:id="@+id/lv"
        android:divider="#B4B3B3"
        android:dividerHeight="1.0dip"
        android:scrollbars="none"
        android:cacheColorHint="@android:color/transparent"
        android:fadingEdge="none"
        android:layout_width="match_parent"
        android:listSelector="#ffff00"
        android:layout_height="match_parent" >
    </ListView>
    </LinearLayout>

</LinearLayout>
