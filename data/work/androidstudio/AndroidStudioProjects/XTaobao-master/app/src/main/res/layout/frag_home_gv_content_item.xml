<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/frag_home_gv_content_item_iv_ico"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/frag_home_qianggou" />

            <TextView
                android:id="@+id/frag_home_gv_content_item_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="爱抢购"
                android:textColor="#eb4f38" />
        </LinearLayout>

        <TextView
            android:id="@+id/frag_home_gv_content_item_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="抢购省钱"
            android:textColor="@color/colorFont"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/frag_home_gv_content_item_iv_good1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/bookbag" />
    </LinearLayout>

    <ImageView
        android:id="@+id/frag_home_gv_content_item_iv_good2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/xiangj" />
</LinearLayout>