<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/act_order_result_xlv_item_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="等待买家付款"
            android:textColor="@color/colorSelectedIcon"
            android:textSize="18sp" />
    </RelativeLayout>
    <!--商品展示区域-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/act_order_result_xlv_item_good_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:background="@drawable/bookbag" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/act_order_result_item_good_name"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:text="ssssssssssssssssssssssssssss"
                android:textColor="@color/colorFont"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/act_order_result_xlv_item_good_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¥ 1299.00"
                android:textColor="@color/colorSelectedIcon"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="X"
                android:textColor="@color/colorFont"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/act_order_result_xlv_item_good_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="50dp"
                android:text="1"
                android:textColor="@color/colorFont"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
    <!--商品展示结束-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/act_order_result_xlv_item_canel_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/colorBackground"
            android:visibility="gone"
            android:text="取消订单"
            android:textColor="@color/colorFont" />

        <Button
            android:id="@+id/act_order_result_xlv_item__pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:visibility="gone"
            android:background="@color/colorBackground"
            android:text="付款"
            android:textColor="@color/colorSelectedIcon" />

        <Button
            android:id="@+id/act_order_result_xlv_item_queren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:visibility="gone"
            android:background="@color/colorBackground"
            android:text="确认收货"
            android:textColor="@color/colorFont" />

        <Button
            android:id="@+id/act_order_result_xlv_item_pingjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:visibility="gone"
            android:background="@color/colorBackground"
            android:text="评价"
            android:textColor="@color/colorFont" />
    </LinearLayout>
</LinearLayout>