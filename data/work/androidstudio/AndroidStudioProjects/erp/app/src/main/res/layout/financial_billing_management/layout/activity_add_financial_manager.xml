<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_account_manager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    tools:context="ui.activity.AddFinancialBillingManagerActivity">

    <TableLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:gravity="center"
            android:text="添加客户"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="@null"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="@null"
        />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@null"
            />
        <TableRow
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="客户名:"
                android:textSize="@dimen/activity_add_account_manager"
                android:id="@+id/textView" />

            <EditText
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_editor"
                android:id="@+id/customerName"
                android:lines="1"
                android:layout_weight="1"
                >
            </EditText>
        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@null"
            />
        <TableRow
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="电话:"
                android:layout_gravity="left"
                android:textSize="@dimen/activity_add_account_manager"
                />

            <EditText
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/phone"
                android:layout_weight="1"
                android:lines="1"
                android:inputType="numberDecimal"
                android:background="@drawable/shape_editor"
                >
            </EditText>
        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="@null"
            />
        <TableRow
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="地址:"
                android:textSize="@dimen/activity_add_account_manager" />

            <EditText
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/address"
                android:layout_weight="1"
                android:lines="1"
                android:background="@drawable/shape_editor"
                >
            </EditText>
        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@null"
            />
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/remark"
                android:textSize="@dimen/activity_add_account_manager"
                />
        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="@null"
            />
        <EditText

                android:enabled="true"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/remarkId"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:minLines="8"
                android:maxLines="20"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_editor"
                android:scrollbars="vertical"
                >
            </EditText>

    </TableLayout>


    <RelativeLayout
        android:layout_marginTop="5dp"
        android:id="@+id/buttonPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/main"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加"
            android:background="#056daa"
            android:id="@+id/add"
            android:textSize="18sp"
            android:textColor="#ffffff"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重置"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/add"
            android:id="@+id/reset"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:background="#7c7777"
            />

    </RelativeLayout>

</RelativeLayout>
