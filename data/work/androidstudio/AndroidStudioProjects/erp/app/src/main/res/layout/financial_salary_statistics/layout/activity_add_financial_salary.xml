<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ui.activity.AddFinancialSalaryActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TableLayout
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:text="添加工资"
                    />
                <TableRow
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="员工    姓名"
                        android:textSize="@dimen/activity_add_account_manager"
                        />

                    <Spinner
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_editor"
                        android:layout_weight="1"
                        android:id="@+id/nameSpinner"
                        >
                    </Spinner>
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2sp"
                    android:background="@null"
                    />
                <TableRow
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="基本    工资"
                        android:textSize="@dimen/activity_add_account_manager"
                        android:id="@+id/textView2" />

                    <EditText
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_editor"
                        android:layout_weight="1"
                        android:id="@+id/jibengongzi"
                        >
                    </EditText>
                </TableRow>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2sp"
                    android:background="@null"
                    />
                <TableRow
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="出差    补助"
                        android:textSize="@dimen/activity_add_account_manager"
                        />
                    <EditText
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_editor"
                        android:id="@+id/chucaibuzhu"
                        android:layout_weight="1"
                        >

                    </EditText>
                </TableRow>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@null"
                    />
                <TableRow
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="奖金    工资"
                        android:textSize="@dimen/activity_add_account_manager"
                        android:id="@+id/textView" />

                    <EditText
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_editor"
                        android:id="@+id/jiangjingongzi"
                        android:layout_weight="1"
                        >
                    </EditText>
                </TableRow>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@null"
                    />
                <TableRow
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="交通    补助"
                        android:textSize="@dimen/activity_add_account_manager"
                        />

                    <EditText
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_editor"
                        android:id="@+id/jiaotongbuzhu"
                        android:layout_weight="1"
                        >
                    </EditText>
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@null"
                    />
                <TableRow
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="加班    补助"
                        android:layout_gravity="left"
                        android:textSize="@dimen/activity_add_account_manager"
                        />

                    <EditText
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/jiabanbuzhu"
                        android:layout_weight="1"
                        android:lines="1"
                        android:inputType="numberDecimal"
                        android:background="@drawable/shape_editor"
                        >
                    </EditText>
                </TableRow>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2sp"
                    android:background="@null"
                    />
                <TableRow
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    >
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="报           销"
                        android:textSize="@dimen/activity_add_account_manager"
                        android:gravity="left"
                        />
                    <EditText
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/baoxiao"
                        android:layout_weight="1"
                        android:background="@drawable/shape_editor"
                        >
                    </EditText>
                </TableRow>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@null"
                    />
                <TableRow
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    >
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="病事假工资"
                        android:textSize="@dimen/activity_add_account_manager"
                        android:gravity="left"
                        />
                    <EditText
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/bingshijiagongzi"
                        android:layout_weight="1"
                        android:background="@drawable/shape_editor"
                        >
                    </EditText>
                </TableRow>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@null"
                    />
                <TableRow
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    >
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="住房公积金"
                        android:textSize="@dimen/activity_add_account_manager"
                        android:gravity="left"
                        />
                    <EditText
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/zhufanggongjijin"
                        android:layout_weight="1"
                        android:background="@drawable/shape_editor"
                        >
                    </EditText>
                </TableRow>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@null"
                    />
                <TableRow
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    >
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="养老    保险"
                        android:textSize="@dimen/activity_add_account_manager"
                        android:gravity="left"
                        />
                    <EditText
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/yanglaobaoxian"
                        android:layout_weight="1"
                        android:background="@drawable/shape_editor"
                        >
                    </EditText>
                </TableRow>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@null"
                    />
                <TableRow
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    >
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="医疗    保险"
                        android:textSize="@dimen/activity_add_account_manager"
                        android:gravity="left"
                        />
                    <EditText
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/yiliaobaoxian"
                        android:layout_weight="1"
                        android:background="@drawable/shape_editor"
                        >
                    </EditText>
                </TableRow>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@null"
                    />
                <TableRow
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    >
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="失业    保险"
                        android:textSize="@dimen/activity_add_account_manager"
                        android:gravity="left"
                        />
                    <EditText
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/shiyebaoxian"
                        android:layout_weight="1"
                        android:background="@drawable/shape_editor"
                        >
                    </EditText>
                </TableRow>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:id="@+id/buttonPanel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    >
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="添加"
                        android:background="@drawable/login_button"
                        android:id="@+id/add"
                        android:textSize="18sp"
                        android:textColor="#ffffff"
                        />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="重置"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/add"
                        android:id="@+id/reset"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:background="@drawable/login_button"
                        />

                </LinearLayout>
            </TableLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
