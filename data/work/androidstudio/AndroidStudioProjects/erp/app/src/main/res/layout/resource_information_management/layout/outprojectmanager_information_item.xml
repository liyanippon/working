<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:background="@drawable/linearlayout_shape_corner"
        android:orientation="vertical"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#686867" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/linearlayout_shape_corner_top"
            android:gravity="center"
            android:text="项目详情"
            android:textColor="#0e2d5f"
            android:textSize="18sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#686867" />
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/linearlayout_shape_corner_center"
            >
            <TextView
                android:id="@+id/text_id"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_weight="1"
                android:text="序号" />

            <View
                android:layout_width="1.5dip"
                android:layout_height="fill_parent"
                android:background="#B4B3B3"/>

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="客户名称" />

            <View
                android:layout_width="1.5dip"
                android:layout_height="fill_parent"
                android:background="#B4B3B3"/>

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="项目名称" />
            <View
                android:layout_width="1.5dip"
                android:layout_height="fill_parent"
                android:background="#B4B3B3"/>
            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="开始时间" />

            <View
                android:layout_width="1.5dip"
                android:layout_height="fill_parent"
                android:background="#B4B3B3"/>

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:paddingBottom="10dip"
                android:textColor="#000000"
                android:paddingTop="10dip"
                android:textSize="15sp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="结束时间" />

            <View
                android:layout_width="1.5dip"
                android:layout_height="fill_parent"
                android:background="#B4B3B3"/>

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:paddingBottom="10dip"
                android:textColor="#000000"
                android:paddingTop="10dip"
                android:textSize="15sp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="项目人数" />
            <View
                android:layout_width="1.5dip"
                android:layout_height="fill_parent"
                android:background="#B4B3B3"/>

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:paddingBottom="10dip"
                android:textColor="#000000"
                android:paddingTop="10dip"
                android:textSize="15sp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="项目描述" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#A7A5A5"/>
        <ListView
            android:layout_weight="1"
            android:id="@+id/lvs"
            android:divider="#B4B3B3"
            android:dividerHeight="1.0dp"
            android:scrollbars="none"
            android:cacheColorHint="@android:color/transparent"
            android:fadingEdge="none"
            android:layout_width="match_parent"
            android:listSelector="#ffff00"
            android:layout_height="match_parent" >
        </ListView>
    </LinearLayout>


</LinearLayout>
